{
  "multipart": [
    {
      "when": { "facing": "south", "has_egg": "false" },
      "apply": { "model":  "cobblemon:block/pasture_bottom" }
    },
    {
      "when": { "facing": "west", "has_egg": "false" },
      "apply": { "model":  "cobblemon:block/pasture_bottom", "y": 90 }
    },
    {
      "when": { "facing": "north", "has_egg": "false" },
      "apply": { "model":  "cobblemon:block/pasture_bottom", "y": 180 }
    },
    {
      "when": { "facing": "east", "has_egg": "false" },
      "apply": { "model":  "cobblemon:block/pasture_bottom", "y": 270 }
    },
    {
      "when": { "facing": "south", "has_egg": "true" },
      "apply": { "model":  "cobbreeding:block/pasture_bottom_egg" }
    },
    {
      "when": { "facing": "west", "has_egg": "true" },
      "apply": { "model":  "cobbreeding:block/pasture_bottom_egg", "y": 90 }
    },
    {
      "when": { "facing": "north", "has_egg": "true" },
      "apply": { "model":  "cobbreeding:block/pasture_bottom_egg", "y": 180 }
    },
    {
      "when": { "facing": "east", "has_egg": "true" },
      "apply": { "model":  "cobbreeding:block/pasture_bottom_egg", "y": 270 }
    }
  ]
}
